<div class="form-container" data-form="post">
  <%= form_with(model: post) do |form| %>
    <% if post.errors.any? %>
      <div class="flash-message flash-alert">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul class="error-list">
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :user_id, "Author", class: "form-label" %>
      <%= form.collection_select :user_id,
          @users,
          :id,
          :username,
          { prompt: "Select an author" },
          { class: "form-control" } %>
    </div>
    <div class="form-group">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title,
          class: "form-control",
          placeholder: "Enter post title" %>
    </div>
    <div class="form-group">
      <%= form.label :content, class: "form-label" %>
      <%= form.text_area :content,
          class: "form-control",
          rows: 10,
          placeholder: "Write your post content here..." %>
    </div>
    <div class="form-actions">
      <%= form.submit "Create Post", class: "btn btn-primary" %>
      <%= link_to "Cancel", posts_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
