<h1>Posts</h1>
<%= link_to 'New Post', new_post_path if authenticated? %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <% if authenticated? %>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td>
            <%= button_to 'Destroy', post, method: :delete,
            data: { turbo_confirm: 'Are you sure?' },
            class: 'btn btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
