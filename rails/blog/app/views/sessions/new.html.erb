<div class="form-container">
  <h2 class="form-title">Log in to your account</h2>
  <% if flash[:alert] %>
    <div class="flash-message flash-alert">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="flash-message flash-notice">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <%= form_with scope: :session, url: session_path do |form| %>
    <div class="form-group">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.email_field :email,
          class: "form-control",
          required: true,
          autofocus: true,
          autocomplete: "username",
          placeholder: "Enter your email address",
          value: params[:email] %>
    </div>
    <div class="form-group">
      <%= form.label :password, "Password", class: "form-label" %>
      <%= form.password_field :password,
          class: "form-control",
          required: true,
          autocomplete: "current-password",
          placeholder: "Enter your password",
          maxlength: 72 %>
    </div>
    <%= form.submit "Log in", class: "btn btn-primary" %>
  <% end %>
  <div class="form-links">
    <%= link_to "Forgot password?", new_password_path, class: "link" %>
    <p>Don't have an account? <%= link_to "Sign up", new_user_path, class: "link" %></p>
  </div>
</div>
